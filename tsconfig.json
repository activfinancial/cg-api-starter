{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "esnext",
        "strict": true,
        "preserveConstEnums": true,
        "lib": ["es2017", "esnext.asynciterable", "dom"],
        "target": "es2016",
        "stripInternal": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
